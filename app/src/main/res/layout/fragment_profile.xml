<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.fragments.profile.ProfileFragment"
        android:background="@color/colorPrimaryLight">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

        <com.google.android.material.tabs.TabLayout android:id="@+id/profileTabPager"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="40dp"
                                                    android:background="@color/colorPrimaryDark"
                                                    app:tabMode="fixed"
                                                    app:tabPaddingEnd="15dp"
                                                    app:tabPaddingStart="15dp"
                                                    app:tabIndicatorHeight="3dp"
                                                    app:tabIndicatorColor="@color/tab_indicator"
                                                    app:tabTextAppearance="@style/ShopeTabLayout"/>

        <androidx.viewpager.widget.ViewPager android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/profileViewPager"
                                             android:layout_below="@id/profileTabPager"/>

    </RelativeLayout>

</layout>