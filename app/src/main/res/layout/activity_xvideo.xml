<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".view.XVideoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/black"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent">

        <VideoView android:layout_width="0dp"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:id="@+id/tutorial"
                   android:visibility="gone"/>

        <com.google.android.exoplayer2.ui.PlayerView android:layout_width="0dp"
                                                     android:layout_height="match_parent"
                                                     app:resize_mode="fixed_width"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     app:layout_constraintTop_toTopOf="parent"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:id="@+id/xvideoPlayer"
                                                     android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>