<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:baselineAligned="false" android:orientation="vertical">

    <RelativeLayout
                    android:id="@+id/cardGotoParkDetails"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="@dimen/general_padding" android:background="@drawable/backgroun_pickup_form">

        <TextView android:id="@+id/gotoDetails" android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/app_name" android:textColor="@color/activity_title" android:textAllCaps="false"
                  android:textStyle="bold"
                  android:textSize="@dimen/general_text" android:layout_alignParentStart="true"
                  android:layout_toStartOf="@id/schedule" android:layout_centerVertical="true"
                  android:fontFamily="@font/roboto"/>

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:contentDescription="@string/playme"
                   android:text="@string/app_name" app:srcCompat="@drawable/icon_next_blue"
                   android:textSize="@dimen/general_text" android:textColor="@color/colorPrimaryDark"
                   android:layout_centerVertical="true" android:textAlignment="textEnd"
                   android:id="@+id/schedule" android:layout_marginStart="15dp" android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="@dimen/margin10"/>

</LinearLayout>

