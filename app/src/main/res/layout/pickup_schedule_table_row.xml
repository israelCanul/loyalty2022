<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="@dimen/margin10"
                    android:paddingBottom="@dimen/margin10">

        <TextView android:id="@+id/puHotelName" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/app_name" android:textColor="@color/primary_text" android:textAllCaps="true"
                  android:textSize="@dimen/general_text" android:layout_alignParentStart="true"
                  android:layout_toStartOf="@id/schedule" android:layout_centerVertical="true"
                  android:fontFamily="@font/roboto"/>

        <TextView android:layout_width="100dp" android:layout_height="wrap_content"
                  android:text="@string/app_name"
                  android:textSize="@dimen/general_text" android:textColor="@color/colorPrimaryDark"
                  android:layout_centerVertical="true" android:textAlignment="textEnd"
                  android:id="@+id/schedule" android:layout_marginStart="15dp" android:layout_alignParentEnd="true"
                  android:fontFamily="@font/roboto"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/primary_text"
            android:id="@+id/view" android:layout_marginTop="@dimen/margin5"/>

</LinearLayout>